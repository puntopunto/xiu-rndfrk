## Dirs 
app_dir="/app"

##  Network
# TODO: check usage with dockerfile.
http_port=80
httpudp_port=80/udp
https_port=443
rtmp_port=1935
rtmpudp_port=1935/udp
api_port=8000
apiudp_port=8000/udp

# - Healthcheck
probe_addr="8.8.8.8"
probe_count=5
probe_deadline=10
probe_timeout=15

# ------------------------------------------------------------------------------
# Regional

# Date and time
TZ="Europe/Moscow"

# ------------------------------------------------------------------------------

# Paths
PATH="${app_dir}:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
SYSROOT="/dummy"
